
# sdkconfig.defaults for ESP-IDF 5.4.1
# CPU and Memory Configuration
CONFIG_FREERTOS_HZ=1000
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

# SPIRAM Configuration for ESP32-S3
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_SPEED_80M=y
CONFIG_SPIRAM_USE_MALLOC=y
CONFIG_SPIRAM_MALLOC_ALWAYSINTERNAL=16384

# Task Watchdog Configuration
CONFIG_ESP_TASK_WDT_TIMEOUT_S=10
CONFIG_ESP_TASK_WDT_CHECK_IDLE_TASK_CPU0=y
CONFIG_ESP_TASK_WDT_CHECK_IDLE_TASK_CPU1=y

# Main Task Configuration
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# SPI Configuration
CONFIG_SPI_MASTER_IN_IRAM=y
CONFIG_SPI_MASTER_ISR_IN_IRAM=y

# I2C Configuration
CONFIG_I2C_ISR_IRAM_SAFE=y

# LCD and Touch Configuration
CONFIG_ESP_LCD_PANEL_IO_FORMAT_BUF_SIZE=32
CONFIG_ESP_LCD_ENABLE_DEBUG_LOG=n

# LVGL Configuration
CONFIG_LV_COLOR_DEPTH_16=y
CONFIG_LV_COLOR_16_SWAP=y
CONFIG_LV_MEM_CUSTOM=y
CONFIG_LV_MEMCPY_MEMSET_STD=y
CONFIG_LV_SPRINTF_CUSTOM=y
CONFIG_LV_TICK_CUSTOM=y
CONFIG_LV_USE_OS_FREERTOS=y
CONFIG_LV_USE_DRAW_SW=y

# Memory Configuration
CONFIG_HEAP_CAPS_USE_DEV_MM=y

# Compiler Optimization
CONFIG_COMPILER_OPTIMIZATION_PERF=y

# Debug Configuration
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_MAXIMUM_EQUALS_DEFAULT=y